// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Shop {
  id          String @id @default(uuid())
  name        String
  description String

  price       Int @default(10)
  prefab_path String @default("Prefab/Menu/")

  shop_display   String @default("shopdefault.png")
  banner_display String @default("bannerdefault.png")

  menus          Menu[]
}

model Menu {
  id          String @id @default(uuid())
  name        String
  description String
  level_max   Int    @default(10)

  price            Int
  price_multiplier Int @default(0)
  price_unlock     Int @default(0)

  income            Int @default(-1)
  income_multiplier Int @default(1)

  menu_display String @default("menudefault.png")

  shopId String
  shop   Shop   @relation(fields: [shopId], references: [id])
}

model VersionUpdate {
  id          Int      @id @default(autoincrement())
  update_name String
  created_at  DateTime @default(now())
}
